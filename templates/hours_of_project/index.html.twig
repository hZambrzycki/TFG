{% block body %}
    
<style>
#tabla {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
 
  width: 50%;
  border: 3px solid #22368A;
  font-style:bold;
  margin:auto;
  margin-top: 10%;
 

}

body{
   background: url(https://fondosmil.com/fondo/20919.jpg) no-repeat;  
}

#tabla td, #tabla th {
  border: 1px solid #ddd;
  padding: 8px;
}

#tabla tr:nth-child(even){background-color: #97C7FE;}

