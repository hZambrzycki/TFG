}
tr{
   
     font-size:18px;
}
</style>
    <table id="tabla">
        <thead>
            <tr>
                 <th>Consultant</th>
                 <span>
                 <th>Project</th>
                 <span>
                 <th>Hours</th>
                 <span>
                 <th>Payment</th>
                 <span>
                 <th>Total</th>
            </tr>
        </thead>
        <tbody>
        {% for hours_of_project in hours_of_projects %}
             <tr>
                 <td>{{ hours_of_project.nameConsultant }}</td>     
                 <td>{{ hours_of_project.projectName }}</td>    
                 {% for xs in sumas %}
                 <td>{{ xs[i] }} </td>
                  {% set i = i+1 %}
                 {% endfor %} 
                 {% if hours_of_project.paymentPerHour == null %}
                 <td>Put Value
                 <a href="{{ path('app_hours_of_project_edit', {'id': hours_of_project.id}) }}">edit</a>
                 </td>
              
                 {% endif %}   
                 {% if hours_of_project.paymentPerHour != null %}
                 <td> {{hours_of_project.paymentPerHour}} </td>
                 {% endif %}
                 {% for xs in total %}
                 {% if xs[j] == null %}
                   <td> {{xs[j] == 0}} </td>
                 {% endif %}
                 {% if xs[j] != null %}
                    <td> {{xs[j]}}â‚¬ </td>
                    {% set j = j+1 %}
                 {% endif %}
                 {% endfor %}
                 
             </tr>
            

        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}